---
import '@fontsource/titillium-web';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Lachlan MacPhee's Personal Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-primary">
		<header class="sticky top-0 z-10 bg-white grid grid-cols-3 items-center h-16 border-black border-b-2">
			<ul class="flex gap-2 ml-4">
			  <li>
				<a href="/" class="font-bold">
				  Portfolio
				</a>
			  </li>
			  <li>
				<a
				  href="https://substack.com/@lachlanmacphee"
				  target="_blank"
				  rel="noreferrer"
				>
				  Blog
				</a>
			  </li>
			</ul>
			<h1 class="font-bold text-center cursor-default">
			  Lachlan MacPhee
			</h1>
			<ul class="mr-4 flex justify-end">
			  <li class="underline font-semibold">
				<a href="https://www.linkedin.com/in/lachlanmacphee/">LinkedIn</a>
			  </li>
			</ul>
		  </header>
		<slot />
	</body>
</html>
